#!/usr/bin/env bash

#
# Open GUI to compilation library Altera Quartus
#

echo +---------------------------------------------------------------------+
echo | Open GUI to compilation library Altera Quartus                      |
echo +---------------------------------------------------------------------+

echo ""
echo " You must creat output directory 'altera_sim_lib' !"
echo ""
echo " Running quartus_sh ..."

if [ "$OS" = "Windows_NT" ]
then
    // quartus_rootdir = d:/Altera/12.1/quartus/bin
    // $quartus_rootdir/quartus_sh --simlib_comp -gui
    $QUARTUS_ROOTDIR/bin/quartus_sh --simlib_comp -gui
else
    kdesu quartus_sh --simlib_comp -gui
fi

echo Done.
