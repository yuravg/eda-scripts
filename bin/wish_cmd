#!/usr/bin/env bash

# Show a command return code using GUI(wish_msg script)
#
# Usage example(s):
#   wish_cmd <some_comman>
#   wish_cmd qp_build

if [ "$#" -eq 0 ] || [ "$1" = '-h' ] || [ "$1" = '--help' ] || [ "$1" = '-help' ]; then
    echo "Usage:"
    echo "  $(basename "${BASH_SOURCE##*/}") [command]"
    echo
    echo "ARGS:"
    echo "    <command>"
    echo "                 command to use with 'wish_msg' script."
    exit 0
fi

if ! "$@"; then
    wish_msg Error red
else
    wish_msg Ok green
fi
