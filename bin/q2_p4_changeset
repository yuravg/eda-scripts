#!/usr/bin/env bash

#
# Create file 'cs.inc' to work build Quartus without Perforce connection
#  input parameter(s):
#    $1 - changeset (0 - default)
#

echo "+------------------------------------------------------------------------+"
echo "|  Create file 'cs.inc'                                                  |"
echo "+------------------------------------------------------------------------+"


case "$1" in
    *[0-9]*)
        changeset=$1
        echo "Input parameter (changeset) = $changeset, write to file 'cs.inc'"
        ;;
    *)
        changeset=0
        echo "Input parameter (changeset) = 'none', write changeset=$changeset to file 'cs.inc'"
        ;;
esac

echo "\`define CHANGESET $changeset" > cs.inc

echo ""
echo "Read file 'cs.inc':"
echo `cat cs.inc`

echo ""
echo "done!"
