#!/usr/bin/env bash

#
# Verifying with Quartus Programmer via ASP
#
# This script launches Intel Quartus II Programmer to verifying EPCS/EPC via ASP. The 'pof' file
# is searched for in the current directory or given as an argument.
#
# For more then one program cable:
#     set environment variable 'QP_CABLE_NAME':
#     # export QP_CABLE_NAME=USB-Blaster[USB-0]
#

echo "+------------------------------------------------------------------------+"
echo "|  Quartus II Programmer ( ASP ) verification                            |"
echo "+------------------------------------------------------------------------+"

read_yesno () {
    while :
    do
        echo "$* (y/n)?"
        read yn junk

        case $yn in
            y|Y|yes|Yes|YES)
                return 0
                ;;
            n|N|no|No|NO)
                return 1
                ;;
            *)
                echo Please answer Yes or No.
                ;;
        esac
    done
}

if [ -z "$QP_CABLE_NAME" ]; then
    QP_CABLE_NAME=USB-Blaster[USB-0]
fi

SCRIPT_NAME="${BASH_SOURCE##*/}"

if [ "$1" == '-h' ] || [ "$1" == '--help' ] || [ "$1" == '-help' ]; then
    echo "Usage:"
    echo "  $SCRIPT_NAME [pof-file-name | pof-file-number]"
    echo ""
    echo "ARGS:"
    echo "    <pof-file-name>"
    echo "                 file name for verification."
    echo "    <pof-file-number>"
    echo "                 file number for verification."
    exit 0
fi

select_file ()
{
    cnt=1
    for p in `ls *.pof 2>/dev/null`; do
        pof_file[$cnt]=$p
        cnt=`expr $cnt + 1`
    done

    if [ ${#pof_file[@]} -gt 0 ]; then
        if [ ${#pof_file[@]} -eq 1 ]; then
            echo " ${pof_file[${1}]}"
        else
            echo " pof file(s):"
            for (( i=1; i<${#pof_file[@]}+1; i++ )); do
                echo "$i : ${pof_file[${i}]}"
            done
            echo "Select pof file :"
            read num_pof_file
        fi
    else
        echo "ERROR! There must be at least one *.pof file in dir: `pwd`"
        exit 2
    fi
    if [ -s "${pof_file[$num_pof_file]}" ]; then
        pof_file_name=${pof_file[$num_pof_file]}
    else
        pof_file_name=${pof_file[1]}
        if [ ${#pof_file[@]} -gt 1 ]; then
            echo "WARNING: will be open default pof file (can't find selected file)"
        fi
    fi

    if [ ${#pof_file[@]} -gt 1 ]; then
        while :
        do
            if read_yesno "Would you like verification with file: '$pof_file_name'" ; then
                break;
            else
                echo "NOTE! Exit without verification!";
                exit 0;
            fi
        done
    fi
}

if [ -n "$1" ]; then
    if [ ! -s "$1" ]; then
        echo "ERROR! Can't find selected file: '$1'"
        exit 3
    fi
    pof_file_name=$1
else
    select_file
fi
echo "File to Programmer: '$pof_file_name'"

quartus_pgm -c "$QP_CABLE_NAME" -m as -o v\;$pof_file_name
