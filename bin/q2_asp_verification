#!/usr/bin/env bash

#
# Run Altera Quartus programmer ASP
#   script is verification file (*.pof) from current directory (if there is only one *.pof),
#   or by name (first input parameter)
#
# Example usage:
# 1. script_name
# 2. script_name <file_name.pof>
# 3. For more then one program cable:
#     set environment variable 'Q2_CABLE_NAME':
#     # export Q2_CABLE_NAME=USB-Blaster[USB-0]
#

echo "+------------------------------------------------------------------------+"
echo "|  Quartus II Programmer ( ASP ) verification only                       |"
echo "+------------------------------------------------------------------------+"

fun_yesno () {
    while :
    do
        echo "$* (y/n)?"
        read yn junk

        case $yn in
            y|Y|yes|Yes|YES)
                return 0
                ;;
            n|N|no|No|NO)
                return 1
                ;;
            *)
                echo Please answer Yes or No.
                ;;
        esac
    done
}

PATH2SCRIPT="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"

if [ -z "$Q2_CABLE_NAME" ]; then
    Q2_CABLE_NAME=USB-Blaster[USB-0]
fi

# if [[ "$fname" = *[[:space:]]* ]]; then
#   echo Error! If There are more then one \`*.pof\` files, you must point name!
#   echo There are files: $fname
#   exit 1
# fi

select_file ()
{
    cnt=1
    for p in `ls *.pof 2>/dev/null`; do
        pof_file[$cnt]=$p
        cnt=`expr $cnt + 1`
    done

    if [ ${#pof_file[@]} -gt 0 ]; then
        if [ ${#pof_file[@]} -eq 1 ]; then
            echo " ${pof_file[${1}]}"
        else
            echo " pof file(s):"
            for (( i=1; i<${#pof_file[@]}+1; i++ )); do
                echo "$i : ${pof_file[${i}]}"
            done
            echo "Select pof file :"
            read num_pof_file
        fi
    else
        echo "ERROR! There must be at least one *.pof file in dir: `pwd`"
        exit 2
    fi
    if [ -s "${pof_file[$num_pof_file]}" ]; then
        pof_file_name=${pof_file[$num_pof_file]}
    else
        pof_file_name=${pof_file[1]}
        if [ ${#pof_file[@]} -gt 1 ]; then
            echo "WARNING: will be open default pof file (can't find selected file)"
        fi
    fi

    if [ ${#pof_file[@]} -gt 1 ]; then
        while :
        do
            if fun_yesno "Would you like verification with file: '$pof_file_name'" ; then
                break;
            else
                echo "NOTE! Exit without verification!";
                exit 0;
            fi
        done
    fi
}

if [ -n "$1" ]; then
    if [ ! -s "$1" ]; then
        echo "ERROR! Can't find selected file: '$1'"
        exit 3
    fi
    pof_file_name=$1
else
    select_file
fi
echo "File to Programmer: '$pof_file_name'"

. "$PATH2SCRIPT"/fun_q2_set_path
fun_q2_set_path
$quartus_bin_dir/quartus_pgm -c "$Q2_CABLE_NAME" -m as -o v\;$pof_file_name
