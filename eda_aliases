# -*- mode: shell-script -*-

# Aliases for 'EDA-scripts'
#
# Usage:
# add to your profile or bashrc:
#
# if [ -f <path2this_file/eda_aliases ]; then
#     . <path2this_file>/eda_aliases
# fi

# * Quartus
if [ "$OS" = "Windows_NT" ]; then
    export RUN_BACKGROUND="&"
else
    export RUN_BACKGROUND=""
fi
alias qp_megawizard="qmegawizq $RUN_BACKGROUND"
alias qp_stp="quartus_stpw $RUN_BACKGROUND"
alias qp_eclipse="eclipse-nios2 $RUN_BACKGROUND"
alias qp_prg="quartus_pgmw $RUN_BACKGROUND"

# * Wish messages
alias wish_msg_ok="wish_msg Ok green"
alias wish_msg_err="wish_msg Error red"
